{
  "title": "Institutional Grammar 2.0 JSON Schema, strict variant",
  "description": "IG 2.0 schema (https://arxiv.org/abs/2008.08937) designed by students from the Faculty of Mathematics and Information Science of the Warsaw University of Technology.\nThis schema is still a prototype and subject to unannounced change.\n",
  "$id": "http://www.example.org/ig-strict",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$defs": {
    "LogicalOperator": {
      "type": "string",
      "enum": [
        "AND",
        "OR",
        "XOR"
      ]
    },
    "TextSpan": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string"
        },
        "begin": {
          "type": "integer"
        },
        "length": {
          "type": "integer"
        }
      },
      "required": [
        "text",
        "begin",
        "length"
      ]
    },
    "SimpleNode": {
      "allOf": [
        {
          "$ref": "#/$defs/TextSpan"
        }
      ],
      "additionalProperties": false,
      "properties": {
        "text": true,
        "begin": true,
        "length": true
      }
    },
    "AbstractStatement": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/$defs/TextSpan"
        }
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "institutionalStatement",
            "statementOfFact"
          ]
        },
        "inversion": {
          "type": "boolean",
          "default": false
        },
        "orElse": {
          "$ref": "#/$defs/Statement"
        }
      }
    },
    "Statement": {
      "oneOf": [
        {
          "$ref": "#/$defs/RegulativeStatement"
        },
        {
          "$ref": "#/$defs/ConstitutiveStatement"
        },
        {
          "$ref": "#/$defs/StatementCombination"
        }
      ]
    },
    "RegulativeStatement": {
      "additionalProperties": false,
      "allOf": [
        {
          "$ref": "#/$defs/AbstractStatement"
        }
      ],
      "properties": {
        "type": true,
        "inversion": true,
        "orElse": true,
        "text": true,
        "begin": true,
        "length": true,
        "attribute": {
          "$ref": "#/$defs/ComponentWithProperties"
        },
        "directObject": {
          "$ref": "#/$defs/ComponentWithProperties"
        },
        "indirectObject": {
          "$ref": "#/$defs/ComponentWithProperties"
        },
        "deontic": {
          "$ref": "#/$defs/ComponentWithoutProperties"
        },
        "aim": {
          "$ref": "#/$defs/ComponentWithoutProperties"
        },
        "activationCondition": {
          "$ref": "#/$defs/ComponentWithoutProperties"
        },
        "executionConstraint": {
          "$ref": "#/$defs/ComponentWithoutProperties"
        }
      },
      "required": [
        "type",
        "attribute",
        "aim"
      ]
    },
    "ConstitutiveStatement": {
      "additionalProperties": false,
      "allOf": [
        {
          "$ref": "#/$defs/AbstractStatement"
        }
      ],
      "properties": {
        "type": true,
        "inversion": true,
        "orElse": true,
        "text": true,
        "begin": true,
        "length": true,
        "constitutedEntity": {
          "$ref": "#/$defs/ComponentWithProperties"
        },
        "deontic": {
          "$ref": "#/$defs/ComponentWithoutProperties"
        },
        "constitutiveFunction": {
          "$ref": "#/$defs/ComponentWithoutProperties"
        },
        "constitutingProperties": {
          "$ref": "#/$defs/ComponentWithProperties"
        },
        "activationCondition": {
          "$ref": "#/$defs/ComponentWithoutProperties"
        },
        "executionConstraint": {
          "$ref": "#/$defs/ComponentWithoutProperties"
        }
      },
      "required": [
        "type",
        "constitutedEntity",
        "constitutiveFunction"
      ]
    },
    "StatementCombination": {
      "additionalProperties": false,
      "allOf": [
        {
          "$ref": "#/$defs/AbstractStatement"
        }
      ],
      "properties": {
        "type": true,
        "inversion": true,
        "orElse": true,
        "text": true,
        "begin": true,
        "length": true,
        "logicalOperator": {
          "$ref": "#/$defs/LogicalOperator"
        },
        "statements": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Statement"
          },
          "minItems": 2
        }
      },
      "required": [
        "logicalOperator",
        "statements"
      ]
    },
    "ComponentWithoutProperties": {
      "oneOf": [
        {
          "$ref": "#/$defs/SimpleNode"
        },
        {
          "$ref": "#/$defs/Statement"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "logicalOperator": {
              "$ref": "#/$defs/LogicalOperator"
            },
            "components": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/ComponentWithoutProperties"
              },
              "minItems": 2
            }
          },
          "required": [
            "logicalOperator",
            "components"
          ]
        }
      ]
    },
    "ComponentWithProperties": {
      "oneOf": [
        {
          "$ref": "#/$defs/SimpleNode"
        },
        {
          "$ref": "#/$defs/Statement"
        },
        {
          "$ref": "#/$defs/ComponentWithPropertiesCombination"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "element": {
              "$ref": "#/$defs/SimpleNode"
            },
            "properties": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/ComponentWithProperties"
              }
            }
          },
          "required": [
            "element",
            "properties"
          ]
        }
      ]
    },
    "ComponentWithPropertiesCombination": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "logicalOperator": {
          "$ref": "#/$defs/LogicalOperator"
        },
        "components": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/ComponentWithProperties"
          },
          "minItems": 2
        }
      },
      "required": [
        "logicalOperator",
        "components"
      ]
    }
  },
  "type": "object",
  "properties": {
    "text": {
      "type": "string"
    },
    "statements": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Statement"
      }
    }
  },
  "additionalProperties": false
}
